<Window
    x:Class="iHRM.View.vSignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:iHRM.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="vSignIn"
    AllowsTransparency="True"
    Background="Transparent"
    Closing="Window_Closing"
    MouseDown="Window_MouseDown"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    x:Name="HostWin"
    xmlns:vm="clr-namespace:iHRM.ViewModel"
    mc:Ignorable="d">

    
    
    <Window.DataContext>
        <vm:vmSignIn/>
    </Window.DataContext>


    <Grid Width="600" Height="400">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="20,0,0,20">
            <Border.Background>
                <ImageBrush ImageSource="/Photo/bg1.jpg" Stretch="UniformToFill" />
            </Border.Background>

            <Grid>
                <Border CornerRadius="20,0,0,20">
                    <Border.Background>
                        <LinearGradientBrush Opacity="0.8" StartPoint="0.5,0" EndPoint="0.5,1">
                            <GradientStop Color="{StaticResource Color_00}" />
                            <GradientStop Offset="1" Color="#006536" />
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <StackPanel Margin="40,50,40,0">

                    <Image
                        Width="100"
                        Height="100"
                        Margin="0,0,0,20"
                        HorizontalAlignment="Center"
                        Source="/Photo/icon.png" />

                    <TextBlock
                        FontSize="16"
                        Foreground="White"
                        Text="Bạn chưa có tài khoản?" />

                    <TextBlock
                        Margin="0,10,0,0"
                        FontSize="25"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="ĐĂNG KÝ NGAY!">
                        <TextBlock.Effect>
                            <DropShadowEffect
                                BlurRadius="20"
                                ShadowDepth="0"
                                Color="{StaticResource Color_00}" />
                        </TextBlock.Effect>
                    </TextBlock>

                    <TextBlock
                        Margin="0,5,0,0"
                        FontSize="13"
                        Foreground="White"
                        Text="Nếu bạn chưa có tài khoản, vui lòng liên hệ số điện thoai ..., hoặc website www.bimsoft.vn"
                        TextWrapping="Wrap" />
                </StackPanel>


                <Grid Margin="30" VerticalAlignment="Bottom">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock
                        Margin="5"
                        HorizontalAlignment="Right"
                        Foreground="White"
                        Text="Tiếng Việt" />

                    <TextBlock
                        Grid.Column="1"
                        Margin="5"
                        HorizontalAlignment="Left"
                        Foreground="White"
                        Text="English" />
                </Grid>

            </Grid>
        </Border>

        <Border Grid.Column="1" CornerRadius="0,20,20,0">
            <Border.Background>
                <ImageBrush ImageSource="/Photo/bg2.jpg" Stretch="UniformToFill" />
            </Border.Background>

            <Grid>
                <Button
                    Width="25"
                    Height="25"
                    Margin="10"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Click="Close_Click">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <md:PackIcon
                                Width="25"
                                Height="25"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource Brush_00}"
                                Kind="CloseBox" />
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <StackPanel Margin="30,40,30,40">
                    <Border
                        Width="100"
                        Height="100"
                        BorderBrush="Orange"
                        BorderThickness="1"
                        CornerRadius="50">
                        <Border.Background>
                            <ImageBrush ImageSource="/Photo/avt.jpg" />
                        </Border.Background>
                    </Border>


                    <TextBox
                        x:Name="txtEmail"
                        md:HintAssist.Hint="Email"
                        Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Margin="{Binding Margin, ElementName=txtPassword}" 
                        Style="{StaticResource MaterialDesignOutlinedTextBox}" />

                    <TextBlock
                        Margin="0,5,0,0"
                        Foreground="Red"
                        Text="{Binding Email, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />


                    <PasswordBox
                        x:Name="txtPassword"
                        Margin="0,10,0,0"
                        md:HintAssist.Hint="Mật khẩu"
                        Style="{StaticResource MaterialDesignOutlinedRevealPasswordBox}" />

                    <Button
                        Margin="0,20,0,0"
                        md:ButtonProgressAssist.IsIndeterminate="True"
                        md:ButtonProgressAssist.IsIndicatorVisible="True"
                        md:ButtonProgressAssist.Value="-1"
                        Command="{Binding Cmd_SignIn}"
                        Content="Đăng nhập"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        CommandParameter="{x:Reference HostWin}"/>

                </StackPanel>

            </Grid>
        </Border>
    </Grid>
</Window>
