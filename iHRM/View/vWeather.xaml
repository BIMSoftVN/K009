<Window x:Class="iHRM.View.vWeather"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:iHRM.View"
        mc:Ignorable="d"
        Title="vWeather" Height="450" Width="800"
        xmlns:vm="clr-namespace:iHRM.ViewModel" 
        xmlns:cvt="clr-namespace:iHRM.Converter"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors">

    <Window.DataContext>
        <vm:vmWeather/>
    </Window.DataContext>


    <Window.Resources>
        <cvt:ImagePathToBitmapConverter x:Key="ImagePathToBitmapConverter"/>
    </Window.Resources>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding Cmd_LoadAll}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="190*"/>
        </Grid.RowDefinitions>

        <Ribbon>
            <RibbonTab Header="Thời tiết">
                <RibbonGroup>
                    <RibbonButton Command="{Binding Cmd_Run}"
                        Content="Chạy" 
                                  Label="Chạy"
                                  LargeImageSource="/Photo/Worker.ico" SmallImageSource="/Photo/Worker.ico"/>

                    <ComboBox Style="{x:Null}"
                              ItemsSource="{Binding ProjectList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="Name"
                              Width="120"
                              SelectedItem="{Binding SelectedProject, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Kinh độ: " VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding SelectedProject.KinhDo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Vĩ độ: " VerticalAlignment="Center"/>
                        <TextBlock  Text="{Binding SelectedProject.ViDo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center"/>
                    </StackPanel>
                </RibbonGroup>
                
                
            </RibbonTab>
        </Ribbon>
        <ListView Grid.Row="1" ItemsSource="{Binding WeatherList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <ListView.View>
                <GridView>
                    <GridView.Columns>
                        <GridViewColumn Header="Ngày" DisplayMemberBinding="{Binding wDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <GridViewColumn Header="Giờ"  DisplayMemberBinding="{Binding wDate, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <GridViewColumn Header="Hình ảnh" >
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Image Width="20" Height="20"
                                           Source="{Binding wImage, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                                    </Image>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="Mô tả"  DisplayMemberBinding="{Binding wMoTa, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <GridViewColumn Header="Nhiệt độ"  DisplayMemberBinding="{Binding wNhietDo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <GridViewColumn Header="Vận tốc gió"  DisplayMemberBinding="{Binding wGio, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </GridView.Columns>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
