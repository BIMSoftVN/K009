<Page
    x:Class="NhanSu.Views.pNhanSu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
    xmlns:local="clr-namespace:NhanSu.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:NhanSu.ViewModels"
    Title="Nhân sự"
    d:DesignHeight="450"
    d:DesignWidth="800"
    dx:ThemeManager.ThemeName="Win11Light"
    mc:Ignorable="d">

    <Page.DataContext>
        <vm:vmNhanSu />
    </Page.DataContext>

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding Cmd_LoadAll}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Menu
            Margin="10,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <MenuItem
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Command="{Binding Cmd_LoadAll}"
                FontSize="16"
                Header="Tải lại">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Green"
                        Kind="Refresh" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="16"
                Header="Thêm nhân sự">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Green"
                        Kind="Add" />
                </MenuItem.Icon>
            </MenuItem>

            <MenuItem
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                FontSize="16"
                Header="Xóa nhân sự">
                <MenuItem.Icon>
                    <md:PackIcon
                        Width="25"
                        Height="25"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="Red"
                        Kind="Minus" />
                </MenuItem.Icon>
            </MenuItem>
        </Menu>


        <dxg:GridControl
            Grid.Row="1"
            SelectionMode="MultipleRow"
            CurrentItem="{Binding UserItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            ItemsSource="{Binding UserList}"
            SelectedItems="{Binding UserSelect, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">

            <dxg:GridControl.View>
                <dxg:TableView
                    AutoWidth="False"
                    ShowCheckBoxSelectorColumn="True"
                    SearchPanelHorizontalAlignment="Stretch"
                    SearchPanelPosition="OverGroupPanel"
                    ShowGroupPanel="False"
                    ShowSearchPanelMode="Always">
                    <dxg:TableView.CellStyle>
                        <Style TargetType="dxg:LightweightCellEditor">
                            <Setter Property="Foreground" Value="Blue" />
                        </Style>
                    </dxg:TableView.CellStyle>
                </dxg:TableView>
            </dxg:GridControl.View>


            <dxg:GridControl.Columns>
                <dxg:GridColumn
                    Width="45"
                    AllowEditing="False"
                    Header="Ảnh">
                    <dxg:GridColumn.CellTemplate>
                        <DataTemplate>
                            <Border
                                Width="30"
                                Height="30"
                                Margin="5"
                                BorderBrush="Gray"
                                BorderThickness="1"
                                CornerRadius="15">
                                <Border.Background>
                                    <ImageBrush ImageSource="{Binding Row.Photo, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="UniformToFill" />
                                </Border.Background>
                            </Border>
                        </DataTemplate>
                    </dxg:GridColumn.CellTemplate>
                </dxg:GridColumn>

                <dxg:GridColumn
                    Width="120"
                    AllowEditing="True"
                    FieldName="Name"
                    Header="Tên người dùng" />

                <dxg:GridColumn
                    Width="150"
                    AllowEditing="True"
                    FieldName="Email"
                    Header="Email" />

                <dxg:GridColumn
                    Width="120"
                    AllowEditing="True"
                    FieldName="PhoneNumber"
                    Header="Số điện thoại" />

                <dxg:GridColumn
                    Width="100"
                    AllowEditing="True"
                    FieldName="DateOfBirth"
                    Header="Ngày sinh" />

                <dxg:GridColumn
                    Width="1*"
                    AllowEditing="True"
                    FieldName="Address"
                    Header="Địa chỉ" />
            </dxg:GridControl.Columns>
        </dxg:GridControl>
    </Grid>
</Page>
