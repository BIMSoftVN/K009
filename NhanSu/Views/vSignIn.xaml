<Window
    x:Class="NhanSu.Views.vSignIn"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NhanSu.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="vSignIn"
    Width="600"
    Height="400"
    x:Name="HostWin"
    AllowsTransparency="True"
    Background="Transparent"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    MouseDown="Window_MouseDown"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core" xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    dx:ThemeManager.ThemeName="Win11Light"
    mc:Ignorable="d"
    xmlns:vm="clr-namespace:NhanSu.ViewModels">

    <Window.DataContext>
        <vm:vmSignIn />
    </Window.DataContext>
    
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <Border CornerRadius="20,0,0,20">
                <Border.Background>
                    <ImageBrush ImageSource="/Photo/bg1.jpg" />
                </Border.Background>

                <Grid>
                    <Border CornerRadius="20,0,0,20">
                        <Border.Background>
                            <LinearGradientBrush Opacity="0.801" StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="{StaticResource SubColor}" />
                                <GradientStop Offset="1" Color="{StaticResource MainColor}" />
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <StackPanel Margin="30">
                        <Image
                            Width="100"
                            Height="100"
                            Margin="0,50,0,0"
                            Source="/Photo/logo.png" />

                        <TextBlock
                            FontSize="15"
                            Foreground="White"
                            Text="Bạn chưa có tài khoản?" />

                        <TextBlock
                            FontSize="25"
                            FontWeight="Bold"
                            Foreground="White"
                            Text="ĐĂNG KÝ NGAY !">
                            <TextBlock.Effect>
                                <DropShadowEffect
                                    BlurRadius="20"
                                    ShadowDepth="0"
                                    Color="{StaticResource MainColor}" />
                            </TextBlock.Effect>
                        </TextBlock>

                        <TextBlock
                            Margin="0,10,0,0"
                            FontSize="13"
                            Foreground="White"
                            Text="Nếu bạn chưa có tài khoản, vui lòng liên hệ Admin để đăng ký."
                            TextWrapping="Wrap" />
                    </StackPanel>
                </Grid>

            </Border>

            <Border Grid.Column="1" CornerRadius="0,20,20,0">
                <Border.Background>
                    <ImageBrush ImageSource="/Photo/bg2.jpg" />
                </Border.Background>

                <Grid>

                    <StackPanel HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Margin="20,0,20,0">

                        <Border Width="80" Height="80"
                                Margin="0,0,0,20" CornerRadius="40"
                                BorderThickness="1"
                                BorderBrush="{StaticResource MainBrush}">
                            
                        </Border>
                        
                        
                        <TextBlock Text="Email" FontSize="13"
                                   Margin="0,0,0,5"/>

                        <dxe:TextEdit Margin="0,0,0,10"
                                      FontSize="13"
                                      NullText="Vui lòng nhập"
                                      Text="{Binding Email, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            
                        </dxe:TextEdit>
                        
                        <TextBlock Text="Mật khẩu"  FontSize="13"
                                   Margin="0,0,0,5"/>

                        <dxe:PasswordBoxEdit Margin="0,0,0,10"
                                             FontSize="13"
                                             NullText="Vui lòng nhập"
                                             Text="{Binding Password, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">
                            
                        </dxe:PasswordBoxEdit>

                        <Button Content="Đăng nhập"
                                FontSize="13"
                                BorderThickness="1"
                                FontWeight="Bold"
                                Padding="10,5"
                                Margin="0,0,0,10"
                                Style="{StaticResource ButtomMainColor}"
                                Command="{Binding Cmd_SignIn}"
                                CommandParameter="{x:Reference HostWin}">
                        </Button>
                    </StackPanel>

                    <Button Style="{StaticResource ButtomMainColor}"
                            Click="Button_Click">
                        <Button.Template>
                            <ControlTemplate>
                                <md:PackIcon
                                    Width="20"
                                    Height="20"
                                    Margin="10"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Foreground="Red"
                                    Kind="CloseCircle" />
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>




            </Border>
        </Grid>

        <md:Snackbar Background="{StaticResource MainBrush}" 
                     Foreground="White"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Top"
                     Grid.ColumnSpan="2"
                     MessageQueue="{Binding MessageQueue, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />

    </Grid>
</Window>
